        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HELP"
            android:textColor="#ffffff"
            android:textSize="40dp"
            android:layout_marginTop="50dp"
            android:gravity="center"/>


        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Per utilizzare l'applicazione, devi\navere obbligatoriamente un\naccount. Per creare un account,\n ti puoi registrare in maniera gratis."
            android:gravity="left"
            android:layout_marginLeft="40dp"
            android:textColor="#1be2e2"
            android:textSize="22dp"/>
        <TextView
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/frame2"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:paddingLeft="10dp"
            android:paddingEnd="2dp"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
