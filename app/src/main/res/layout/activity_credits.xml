<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Credits"
    android:background="@drawable/bg_g">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CREDITI:"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            tools:ignore="HardcodedText,ObsoleteLayoutParam,SpUsage" />
        <View
            android:layout_width="360dp"
            android:layout_height="3dp"
            android:background="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            tools:ignore="RtlHardcoded" />
        <ImageView
            android:id="@+id/avatar1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:maxWidth="42dp"
            android:maxHeight="42dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:scaleType="fitCenter"
            android:background="@drawable/avatar1"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_width="230dp"
            android:layout_height="87dp"
            android:text="Ciao, sono Filippo Ramalli...\n\nLa mia classe: 5DIA - 2024\n\nScuola: ITIS Galileo Galieli Arezzo"
            android:gravity="left"
            android:textColor="#1be2e2"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="-90dp"/>
        <ImageView
            android:id="@+id/avatar2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:maxWidth="42dp"
            android:maxHeight="42dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:scaleType="fitCenter"
            android:background="@drawable/avatar2"
            />
        <TextView
            android:layout_width="230dp"
            android:layout_height="87dp"
            android:text="Ciao, sono Giovanni Brunetti...\n\nLa mia classe: 5DIA - 2024\n\nScuola: ITIS Galileo Galieli Arezzo"
            android:textColor="#ffffff"
            android:gravity="left"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="-90dp"/>
        <ImageView
            android:id="@+id/avatar3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:maxWidth="42dp"
            android:maxHeight="42dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="260dp"
            android:scaleType="fitCenter"
            android:background="@drawable/avatar3"
            tools:ignore="RtlHardcoded" />
        <TextView
            android:layout_width="230dp"
            android:layout_height="87dp"
            android:text="Ciao, sono Sebastian Simion...\n\nLa mia classe: 5DIA - 2024\n\nScuola: ITIS Galileo Galieli Arezzo"
            android:textColor="#1be2e2"
            android:gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-90dp"
            tools:ignore="HardcodedText,RtlHardcoded" />
        <ImageView
            android:id="@+id/avatar4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:maxWidth="42dp"
            android:maxHeight="42dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="260dp"
            android:scaleType="fitCenter"
            android:background="@drawable/avatar4"
            tools:ignore="ContentDescription,RtlHardcoded" />
        <TextView
            android:layout_width="230dp"
            android:layout_height="87dp"
            android:text="Ciao, sono Matteo Magi...\n\nLa mia classe: 5DIA - 2024\n\nScuola: ITIS Galileo Galieli Arezzo"
            android:textColor="#ffffff"
            android:gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-90dp"
            tools:ignore="HardcodedText,RtlHardcoded" />
        <View
            android:layout_width="360dp"
            android:layout_height="3dp"
            android:background="#000000"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            tools:ignore="RtlHardcoded" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCreditsIndietro"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="-100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_red"
            android:textColor="@color/white"
            app:cornerRadius="10dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</RelativeLayout>