<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddbdd"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">







    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="10dp"
        android:minHeight="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etQuestion"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="Scrivi il testo"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:maxLines="4"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif"
        android:layout_width="591dp"
        android:layout_height="765dp"
        android:layout_alignParentStart="true"

        android:layout_marginStart="-120dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-55dp"
        android:src="@drawable/model1"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmit"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Submit"
            android:gravity="center"
            android:textAllCaps="true"
            android:background="@drawable/button_chat_normale"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-150dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/mic"  />
            />
        <at.markushi.ui.CircleButton
            android:id="@+id/btnAvatar"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:src="@drawable/icon_user"
            android:layout_marginTop="-70dp"
            android:layout_marginLeft="-5dp"
            app:cb_color="#6750a4"
            android:layout_marginBottom="20dp"/>
        <at.markushi.ui.CircleButton
            android:id="@+id/mic"
            android:layout_width="56dip"
            android:layout_height="56dip"
            android:layout_marginTop="-80dp"
            android:src="@drawable/mic_icon"
            app:cb_color="#6750a4"
            android:layout_marginLeft="75dp"
            app:cb_pressedRingWidth="8dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnSubmit"
            app:layout_constraintStart_toStartOf="parent"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtResponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginVertical="70dp"
            android:hint="Riposta..."
            android:gravity="left"
            android:padding="10dp"
            android:visibility="visible"
            android:layout_marginTop="150dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/input_1"
            android:maxLines="3"
            />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollview1"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:fillViewport="true"
        android:layout_marginTop="150dp"
        android:visibility="gone"
        android:background="@drawable/frame3pt4">
    <LinearLayout
        android:id="@+id/conversazioni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:padding="20dp"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:isScrollContainer="true"
        android:maxLines="19"

        >
        <at.markushi.ui.CircleButton
            android:id="@+id/btnClose"
            android:layout_width="54dip"
            android:layout_height="54dip"
            android:background="@drawable/borderwhitebackground"
            app:cb_color="#DDDDDD"
            android:visibility="gone"
            android:src="@drawable/icon_close"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"/>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>